<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <ul>
      <% messages.forEach((message, i) => { %>
      <li>
        <strong><%= message.user %></strong> wrote:
        <br />
        <%= message.text %>
        <br />
        <small><%= message.added.toLocaleString() %></small>
        <a href="/message/<%= i %>">open</a>
      </li>

      <% }) %>
    </ul>
    <a href="/new">Add a new message</a>
  </body>
</html>
